@model Music

<!DOCTYPE html>
<html>
<head>
    <title>Create New Song</title>
</head>
<body>
    <h2>Create New Song</h2>

    <form method="post" asp-controller="Music" asp-action="Create">
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Artist"></label>
            <input asp-for="Artist" class="form-control" required />
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Add other input fields as needed -->

        <div>
            <button type="submit" class="btn btn-primary">Create Song</button>
        </div>
    </form>

    <!-- Display validation errors -->
    <div asp-validation-summary="All" class="text-danger"></div>

</body>
</html>


