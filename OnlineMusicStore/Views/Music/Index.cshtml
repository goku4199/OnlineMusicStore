@{
}

@model List<Music>

<!DOCTYPE html>
<html>
<head>
    <title>Music List</title>
</head>
<body>
    <h2>Music List</h2>

    @if (Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Price</th>
                    <!-- Add other columns as needed -->
                </tr>
            </thead>
            <tbody>
                @foreach (var music in Model)
                {
                    <tr>
                        <td>@music.Id</td>
                        <td>@music.Title</td>
                        <td>@music.Artist</td>
                        <td>@music.Price</td>
                        <!-- Add other columns as needed -->
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No music records available.</p>
    }
</body>
</html>