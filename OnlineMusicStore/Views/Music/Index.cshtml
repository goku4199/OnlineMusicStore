@{
    //@using Microsoft.AspNetCore.Http
}



@model List<Music>

@{
    var userId = Context.Session.GetInt32("UserId");
    var username = Context.Session.GetString("Username");
}

@if (userId.HasValue && !string.IsNullOrEmpty(username))
{
    <p>Welcome, @username! Your user ID is @userId.</p>
}
else
{
    <p>Not logged in.</p>
}

<!DOCTYPE html>
<html>
<head>
    <title>Music List</title>
</head>
<body>
    <h2>Music List</h2>

    @if (Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Price</th>
                    <!-- Add other columns as needed -->
                </tr>
            </thead>
            <tbody>
                @foreach (var music in Model)
                {
                    <tr>
                        <td>@music.id</td>
                        <td>@music.title</td>
                        <td>@music.artist</td>
                        <td>@music.price</td>
                        <!-- Add other columns as needed -->
                        <td>
                            @if (userId.HasValue && !string.IsNullOrEmpty(username))
                            {
                                <form method="post" action="@Url.Action("AddToCart", "User")">
                                    <input type="hidden" name="userId" value="@userId" />
                                    <input type="hidden" name="songId" value="@music.id" />
                                    <button type="submit">Add to Cart</button>
                                </form>
                            }
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No music records available.</p>
    }
</body>
</html>